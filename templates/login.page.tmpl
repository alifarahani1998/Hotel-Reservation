{{template "base" .}}

{{define "content"}}


        <div class="container">

            <div class="row">
                

                <div class="col">

                    <h1>Login</h1>
                
                </p>

                

                <form method="POST" action="/user/login" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group mt-5">
                        <label for="username">Username:</label>
                            {{with .Form.Errors.Get "username"}}
                                <label class="text-danger">{{.}}</label>
                            {{end}}
                        <input type="email" name="username" value="" id="username" class="form-control {{with .Form.Errors.Get "username"}} is-invalid {{end}}" required autocomplete="off">
                    </div>


                    <div class="form-group">
                        <label for="password">Password:</label>
                        {{with .Form.Errors.Get "password"}}
                                <label class="text-danger">{{.}}</label>
                            {{end}}
                        <input type="password" name="password" value="" id="password" class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{end}}" required autocomplete="off">
                    </div>

                    <hr>

                    <input type="submit" class="btn btn-primary" value="Login">



                </form>

                </div>




            </div>        
        </div>

{{end}}